{
	"compilerOptions": {
		"typeRoots": ["./node_modules/@types"],
		"types": ["@highlight-run/sourcemap-uploader", "@highlight-run/node"],
		"target": "ESNext",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"composite": true
	},
	"include": ["src"],
	"references": [
		{ "path": "../rrweb/packages/rrweb" },
		{ "path": "../highlight-node" },
		{ "path": "../sourcemap-uploader" }
	]
}
