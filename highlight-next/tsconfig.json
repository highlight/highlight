{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"declaration": true,
		"declarationDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react"
	},
	"include": ["src"]
}
