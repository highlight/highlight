{
	"extends": ["eslint:recommended"],
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"sourceType": "module",
		"allowImportExportEverywhere": true
	},
	"rules": {
		"strict": 2,
		"no-empty": "off",
		"no-unused-vars": "off"
	}
}
