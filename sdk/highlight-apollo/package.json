		"access": "public"
	},
	"dependencies": {
		"@apollo/server": "^4",
		"@highlight-run/node": "workspace:*",
		"apollo-server-plugin-base": "^3"
	},
	"devDependencies": {
		"tsup": "^6.6.3",
		"typescript": "^5.0.4"
	}
}
