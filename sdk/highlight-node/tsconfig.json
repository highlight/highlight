{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ES6",
		"declaration": true,
		"declarationDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"types": ["node", "jest"]
	},
	"include": ["src"],
	"references": [{ "path": "../../rrweb/packages/rrweb" }]
}
