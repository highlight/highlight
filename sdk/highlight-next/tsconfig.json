{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "dist",
		"removeComments": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"types": [
			"@highlight-run/sourcemap-uploader",
			"@highlight-run/node",
			"jest"
		]
	},
	"include": ["src/**/*"],
	"references": [
		{
			"path": "../highlight-node"
		},
		{
			"path": "../../sourcemap-uploader"
		}
	]
}
