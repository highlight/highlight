{
	"name": "@highlight-run/next",
	"version": "3.0.0",
	"description": "Client for interfacing with Highlight in next.js",
	"files": [
		"dist",
		"highlight-init.d.ts",
		"index.d.ts"
	],
	"exports": {
		".": {
			"edge": "./dist/index.edge.js",
			"edge-light": "./dist/index.edge.js",
			"browser": "./dist/index.edge.js",
			"worker": "./dist/index.edge.js",
			"workerd": "./dist/index.edge.js",
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		},
		"./highlight-init": {
			"types": "./dist/HighlightInit.d.ts",
			"import": "./dist/HighlightInit.mjs",
			"require": "./dist/HighlightInit.js"
		}
	},
	"scripts": {
		"typegen": "tsup src/index.ts --dts-only && tsup src/index.edge.ts --dts-only",
		"dev": "yarn build --watch",
		"build": "yarn build:edge && yarn build:node && yarn build:init",
		"build:edge": "tsup src/index.edge.ts --format cjs,esm --dts",
		"build:node": "tsup src/index.ts --format cjs,esm --dts",
		"build:init": "tsup src/HighlightInit.tsx --format cjs,esm --dts && sh ./bin/clean-highlight-init.sh",
		"test": "jest"
	},
	"author": "",
	"license": "ISC",
	"peerDependencies": {
		"highlight.run": ">=3.0.0",
		"next": ">=12",
		"react": ">=17"
	},
	"dependencies": {
		"@highlight-run/node": "workspace:*",
		"@highlight-run/sourcemap-uploader": "workspace:*",
		"@opentelemetry/api": "^1.4.1",
		"npm-run-all": "4.1.5"
	},
	"devDependencies": {
		"@trpc/server": "^9.27.4",
		"@types/jest": "27.4.1",
		"eslint": "8.39.0",
		"jest": "^29.2.0",
		"next": "^13.3.4",
		"ts-jest": "^29.0.3",
		"tsup": "^6.2.3",
		"typescript": "^4.8.2"
	}
}
