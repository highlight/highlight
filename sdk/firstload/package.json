{
	"name": "highlight.run",
	"version": "6.4.0",
	"scripts": {
		"build": "node scripts/version.mjs && yarn typegen && vite build",
		"dev": "node scripts/version.mjs && vite dev",
		"reflame": "node scripts/version.mjs",
		"reflame-build": "node scripts/version.mjs",
		"enforce-size": "size-limit",
		"test": "vitest --run",
		"typegen": "tsc && node scripts/replace-client-imports.mjs"
	},
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/firstload/src/index.d.ts",
	"exports": {
		"types": "./dist/firstload/src/index.d.ts",
		"import": "./dist/index.js",
		"require": "./dist/index.cjs",
		"node": "./dist/index.cjs",
		"default": "./dist/index.js"
	},
	"files": [
		"dist"
	],
	"license": "MIT",
	"devDependencies": {
		"@size-limit/file": "^8.1.0",
		"@types/chrome": "^0.0.144",
		"readdirp": "^3.6.0",
		"size-limit": "^8.1.0",
		"tslib": "^2.4.0",
		"typescript": "^5.0.4",
		"vite": "^4.3.5",
		"vitest": "^0.31.0"
	},
	"size-limit": [
		{
			"path": "dist/**.js",
			"limit": "32 kB",
			"brotli": true
		}
	]
}
