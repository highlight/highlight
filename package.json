{
	"name": "highlight",
	"private": true,
	"version": "1.0.0",
	"repository": "git@github.com:highlight-run/highlight.git",
	"author": "Highlight",
	"license": "MIT",
	"dependencies": {
		"concurrently": "^6.5.1"
	},
	"workspaces": [
		"client",
		"experiments/chrome-extension",
		"experiments/performance",
		"firstload",
		"frontend",
		"highlight-next",
		"highlight-node",
		"render",
		"rrweb/packages/*",
		"sourcemap-uploader"
	],
	"scripts": {
		"build:all": "yarn turbo run prepublish build",
		"build:backend": "cd backend && go build",
		"build:frontend": "yarn turbo run build --filter frontend...",
		"ci:backend": "cd backend && doppler run -- ./backend",
		"ci:build": "run-p --print-label build:frontend build:backend",
		"ci:frontend": "yarn turbo run dev --filter frontend --filter client --filter firstload --only",
		"cy:run": "cypress run",
		"cy:run:chrome": "cypress run --headed --browser chrome",
		"dev": "run-p --print-label --race 'dev:*'",
		"dev:backend": "cd backend && make start",
		"dev:frontend": "yarn turbo run dev --filter frontend...",
		"dev:redis": "redis-server",
		"format-check": "prettier --check --ignore-unknown . \"!./data\"",
		"format:all": "prettier --write --ignore-unknown . \"!./data\"",
		"frontend:start": "yarn dev:frontend",
		"g": "yarn generate",
		"generate": "hygen",
		"prepare": "husky install && patch-package",
		"publish:all": "run-p --print-label publish:turbo publish:render",
		"publish:turbo": "changeset version && changeset publish",
		"publish:render": "yarn workspace render publish",
		"test:all": "yarn turbo run test --filter=!@highlight-run/rrdom --filter=!@highlight-run/rrweb --filter=!@highlight-run/rrweb-snapshot",
		"sourcemaps:frontend": "yarn workspace @highlight-run/frontend sourcemaps"
	},
	"devDependencies": {
		"@changesets/cli": "^2.24.4",
		"chalk": "^5.0.1",
		"cypress": "^10.8.0",
		"husky": "^8.0.1",
		"hygen": "^6.2.7",
		"npm-run-all": "^4.1.5",
		"patch-package": "^6.4.7",
		"prettier": "^2.7.1",
		"pretty-quick": "^3.1.3",
		"turbo": "^1.5.4"
	},
	"packageManager": "yarn@3.2.3"
}
