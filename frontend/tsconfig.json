{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2019",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "allowJs": true,
    // hnoFallthroughCasesInSwitch is needed. See ttps://github.com/facebook/create-react-app/issues/9429#issuecomment-674994709
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
}
